#!/bin/bash

# In this particular case, dresden has to make sure that it's the latest
# module loaded in the system, so no more modules will be loaded after it
#
# In order to achieve that, we will watch the existence of a file that 
# it's generated by default on the S99local

function check() {
        while [ ! -e /var/lock/subsys/local ]; do
            sleep 3
        done
	#/sbin/modprobe -s dresden
}

check &


